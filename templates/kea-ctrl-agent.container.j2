[Unit]
Description=Kea Control Agent
Documentation=man:kea-ctrl-agent(8)
Wants=network-online.target
After=network-online.target
After=time-sync.target

[Container]
ContainerName=kea-ctrl-agent
Exec="/usr/sbin/kea-ctrl-agent -c /etc/kea/kea-ctrl-agent.conf"
Image={{ kea_agent_container_image }}

# TODO: Setup unified volume
Tmpfs=/tmp

# Networking Options
Network=host

# Security Options
AddCapability=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
ReadOnly=true
User=kea

# Misc Options
AutoUpdate=local
Timezone=local

[Service]
#EnvironmentFile=-{{ kea_paths_config }}/kea.env
Restart=always

[Install]
WantedBy=multi-user.target
